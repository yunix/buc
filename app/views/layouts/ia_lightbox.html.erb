<%= html_open_tag -%>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title><%= yield :title -%></title>
    <%= link_tag("/favicon.png", :rel => "shortcut icon") %>
    <%= stylesheet_link_tag 'backend', 'reset-min', 'expero', 'grid', 'mini_grid', 'pwc_default', 'scal' %>
	<%= stylesheet_link_tag 'extensions/slideshow/admin/slideshows' %>
    <%= stylesheet_link_tag 'ie' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'container', 'admin', 'widget', 'window', 'scal', :cache => 'cache/admin' %>
    <%= javascript_include_tag "cache/#{get_locale_and_direction[:locale]}/dynamic_handlers" -%>
		<%= javascript_include_tag 'extensions/slideshow/admin/slideshows_cropper' %>
  </head>
  <body class="lightbox">
    <div id="calendar-container" class="scal tinyscal" style="display:none; z-index:1000;"><!-- gu --></div>
    <div id="lightbox_wrapper">
      <%= yield :layout %>
    </div>
    <%= render :partial => 'shared/flash_messages' -%>
    <%= yield :js  %>
    <%= render :partial => '/shared/translation_center' if in_preview_mode? %>
  </body>
</html>
